-- print how long queries take
\timing

-- greeting
\echo '\nWelcome back, registrar.\n'

-- create history file per connection, such as:
-- .psql_history-localhost-testdb
\set HISTFILE ~/.psql_history- :HOST - :DBNAME
-- change history filesize, default was 500
\set HISTSIZE 2000
